<?xml version="1.0" encoding="UTF-8"?>
<!-- Standard XML header. Tells Salesforce this is XML. -->
<!-- The wrapper tag for Lightning component settings. -->
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- Uses Salesforce API version 59.0 (the newest one at the time). -->
    <apiVersion>59.0</apiVersion>
    <!-- Means this component is available for use in the App Builder (otherwise it's hidden). -->
    <isExposed>true</isExposed>
    <!-- Tells Salesforce where you can use this: Record Pages, App Pages, and Home Pages. -->
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <!-- Restricts Record Page usage, so this component only appears on the Job Application Object Record Page. -->
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Job_Application__c</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>